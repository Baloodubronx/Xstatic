html
body
  overflow hidden
  width 100%
  height 100%
body
  overflow auto
  overflow-x hidden
  font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size 15px
  margin-top 30px

a
  text-decoration none

input:focus
  outline none

#container
  position absolute
  top 0
  bottom 0
  right 0
  left 0
  overflow hidden

.navbar
  position fixed
  top 0
  left 0
  right 0
  height 30px
  background black
  z-index 1000
  ul
    list-style none
    padding 0
    margin 0
    li
      display inline-block
      a
        line-height 30px
        color white
        display block
        padding 0 20px
        text-transform uppercase
        font-size 13px
        &:hover
          background white
          color black
        span
          display inline-block
          padding-right 5px

.main
  position absolute
  top 0
  bottom 0
  right 0
  left 0
  overflow hidden

.main-content
  position: absolute;
  top: 30px;
  right: 0;
  bottom: 30px;
  left: 0;
  background: #fff;
  overflow-y: auto;
  overflow-x: hidden;
  .entry-title
    height: 59px;
    padding: 0 20px;
    position: relative;
    border-bottom 1px solid #888
    input
      width: 100%;
      height: 59px;
      border: 0;
      margin: 0;
      padding: 0;
      font-size: 2.6rem;
      font-weight: bold;
      letter-spacing: -1px;
      background: transparent;
  .md-editor
    width: 75%;
    position: absolute;
    bottom: 0;
    top: 60px;
    left 25%
    right 0
    background #fff
    border-left 1px solid #888
    .md-editor-content
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      .code-editor
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        height: 100%;
        max-width: 100%;
        overflow: auto;
        -webkit-overflow-scrolling: touch;
        resize: none;
        border: 0;
        font-size: 1rem;
        line-height: 1.4rem;
        font-family: Consolas, "Liberation Mono", Menlo, Courier, monospace;
        color: #3c4043;
.sidebar
  position absolute
  top 60px
  left 0
  bottom 0
  width 25%

.footer
  position fixed
  bottom 0
  right 0
  left 0
  height 30px
  border-top 1px solid #888
  text-align center
  line-height 30px

.media-preview
  height 100px
  display block

input
  min-width 200px
