body
  font-family: 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size 15px
  margin-top 30px

a
  text-decoration none

.navbar
  position absolute
  top 0
  left 0
  right 0
  height 30px
  background black
  ul
    list-style none
    padding 0
    margin 0
    li
      display inline-block
      a
        line-height 30px
        color white
        display block
        padding 0 20px
        text-transform uppercase
        font-size 13px
        &:hover
          background white
          color black

.sidebar
  width 25%
  float left

.editzone
  width 75%
  float left
